{
  "env": {
      "node": true,
      "commonjs": true,
      "mocha": true
  },
  "extends": "eslint:recommended",
  "rules": {
      "indent": [
          "error",
          "tab"
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "no-useless-escape": 0
  },
  "parserOptions": {
      "ecmaVersion": 2015
  },
  "parser": "babel-eslint"
}